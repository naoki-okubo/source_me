%div.registration-new
  .container-fluid
    .row
      = render 'shared/header'
      .new-main
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .sourceCreate
            .sourceCreate__title
              %p 新規会員登録
            .sourceCreate__form
              .form
                %p ニックネーム:
                = f.text_field :nickname,autofocus: true, class:"form__title", placeholder:"例) SourceMe 太郎", autofocus: true
              .form
                %p メールアドレス:
                = f.email_field :email, autocomplete: "email", class:"form__url", placeholder:"PC・携帯どちらでも可"
              .form
                %p 姓:
                = f.text_field :family_name, class:"form__url", placeholder:"例) 山田"
              .form
                %p 名:
                = f.text_field :first_name, class:"form__title", placeholder:"例) 彩"
              .form
                %p 姓(カナ):
                = f.text_field :family_name_kana, class:"form__url", placeholder:"例) ヤマダ"
              .form
                %p 名(カナ):
                = f.text_field :first_name_kana, class:"form__url", placeholder:"例) サヤカ"
              .form
                %p パスワード:
                = f.password_field :password, autocomplete: "new-password", class:"form__url", placeholder:"６文字以上"
              .form
                %p パスワード(確認):
                = f.password_field :password_confirmation, autocomplete: "new-password", class:"form__url", placeholder:"６文字以上"
              .submit
                = f.submit "登録する", class:"submit__btn"
              .submit.login__btn
                = render partial:"devise/shared/links"
