%div
  .container-fluid
    .row
      = render 'shared/header'
      - if 0 < @user.boards.length
        .main
          .boardList
            - i = 0
            -  while i < @user.boards.length
              = link_to source_path(@user.boards[i].id) do
                .board
                  %p
                    = @user.boards[i].name
              - i += 1