%div.boards-new
  .container-fluid
    .row
      = render 'shared/header'
      .main
        = form_with(model:@board, local: true) do |f|
          .boardCreate
            .boardCreate__title
              %p 新しいボードの作成
            .boardCreate__form
              .title
                = f.text_field :name, class:"title__form", placeholder:"タイトルを入力", autofocus: true
              .submit
                = f.submit "作成する", class:"submit__btn"
              .sourceCreate__title
                = link_to :back, class:"back-btn" do
                  .submit-back
                    戻る
